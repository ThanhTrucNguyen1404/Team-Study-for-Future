@model Nguyễn_Hoàng_Anh_Khoa___2280601527___LTW___Tuần_3.Models.Product

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <div class="row g-4 align-items-center">
            <div class="col-md-5 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded shadow-sm"
                         style="max-width: 100%; height: auto; object-fit: cover;">
                }
            </div>
            <div class="col-md-7">
                <h2 class="fw-bold text-primary">@Model.Name</h2>
                <h3 class="text-success fw-semibold">💲 @Model.Price</h3>
                <p class="text-muted fs-5">@Model.Description</p>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary btn-lg">⬅ Back to List</a>
    </div>
</div>
