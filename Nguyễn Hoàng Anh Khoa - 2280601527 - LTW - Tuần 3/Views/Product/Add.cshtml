@model Nguyễn_Hoàng_Anh_Khoa___2280601527___LTW___Tuần_3.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <h2 class="text-center text-primary">➕ Add Product</h2>

        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="fw-bold">Product Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Price" class="fw-bold">Price ($)</label>
                        <input asp-for="Price" class="form-control" placeholder="Enter product price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="fw-bold">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter product description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="fw-bold">Category</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ImageUrl" class="fw-bold">Product Image</label>
                        <input type="file" asp-for="ImageUrl" class="form-control" id="imageInput" />
                    </div>
                </div>

                <div class="col-md-6 text-center">
                    <label class="fw-bold">Image Preview</label>
                    <img id="previewImage" src="https://via.placeholder.com/300"
                         class="img-fluid rounded shadow"
                         style="max-width: 300px; height: auto; object-fit: cover;" />
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg">✅ Add Product</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">⬅ Back to List</a>
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById('imageInput').addEventListener('change', function (event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById("previewImage").src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });
</script>
